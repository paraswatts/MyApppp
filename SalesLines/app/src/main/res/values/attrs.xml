<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTextView">
        <attr name="font" format="string" />
    </declare-styleable>
    <declare-styleable name="TedBottomPickerImageView">
        <attr name="foreground" format="reference"/>
        <attr name="fit_mode" format="string"/>
    </declare-styleable>



    <declare-styleable name="TedBottomPickerSquareView">
        <attr name="matchHeightToWidth" format="boolean"/>
        <attr name="matchWidthToHeight" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="filterIcon">
        <attr name="filter" format="color" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>






    <declare-styleable name="PinEntryView">
        <!-- The number of digits in the pin -->
        <attr name="numDigits" format="integer" />
        <!-- Digit dimensions, default 50dp x 50dp -->
        <attr name="digitWidth" format="dimension" />
        <attr name="digitHeight" format="dimension" />
        <!-- Spacing between the pin boxes, default 20dp -->
        <attr name="digitSpacing" format="dimension" />
        <!-- Digit background, colour or drawable -->
        <attr name="digitBackground" format="reference|color" />
        <!-- Font size to use for the mask text, default 15sp -->
        <attr name="digitTextSize" format="dimension" />
        <!-- Colour of the mask text, defaults to theme textColorPrimary -->
        <attr name="digitTextColor" format="color" />
        <!-- Digit elevation (API 21+ only), default 0dp -->
        <attr name="digitElevation" format="dimension" />
        <!-- The character to use to mask the input -->
        <attr name="mask" format="string" />
        <!-- Accent color, defaults to theme colorAccent -->
        <attr name="pinAccentColor" format="color" />
        <!-- Accent width, default 3dp -->
        <attr name="accentWidth" format="dimension" />
        <!-- Accent type, default 'character' -->
        <attr name="accentType" format="enum">
            <enum name="none" value="0" />
            <enum name="all" value="1" />
            <enum name="character" value="2" />
        </attr>
        <!-- Input type -->
        <attr name="pinInputType" format="enum">
            <enum name="text" value="1" />
            <enum name="number" value="2" />
        </attr>
        <!-- Only draw accent when View has focus -->
        <attr name="accentRequiresFocus" format="boolean" />


    </declare-styleable>


    <declare-styleable name="BottomNavigationBehavior_Params">
        <attr name="tabLayoutId" format="reference"></attr>
    </declare-styleable>


    <declare-styleable name="ShimmerRecyclerView">
        <attr name="demo_layout" format="reference"/>
        <attr name="demo_child_count" format="integer"/>
        <attr name="demo_layout_manager_type" format="enum">
            <enum name="linear_vertical" value="0" />
            <enum name="linear_horizontal" value="1" />
            <enum name="grid" value="2" />
        </attr>
        <attr name="demo_grid_child_count" format="integer" />
    </declare-styleable>


    <declare-styleable name="ShimmerFrameLayout">
        <attr name="auto_start" format="boolean"/>
        <attr name="base_alpha" format="float"/>
        <attr name="duration" format="integer"/>
        <attr name="repeat_count" format="integer"/>
        <attr name="repeat_delay" format="integer"/>
        <attr name="repeat_mode" format="enum">
            <enum name="restart" value="1"/>
            <enum name="reverse" value="2"/>
        </attr>
        <attr name="angle" format="enum">
            <enum name="cw_0" value="0"/>
            <enum name="cw_90" value="90"/>
            <enum name="cw_180" value="180"/>
            <enum name="cw_270" value="270"/>
        </attr>
        <attr name="dropoff" format="float"/>
        <attr name="fixed_width" format="dimension"/>
        <attr name="fixed_height" format="dimension"/>
        <attr name="intensity" format="float"/>
        <attr name="relative_width" format="float"/>
        <attr name="relative_height" format="float"/>
        <attr name="shape" format="enum">
            <enum name="linear" value="0"/>
            <enum name="radial" value="1" />
        </attr>
        <attr name="tilt" format="float"/>
    </declare-styleable>



        <declare-styleable name="EditSpinner">
            <attr name="dropDownDrawable" format="reference" />
            <attr name="dropDownDrawableWidth" format="dimension" />
            <attr name="dropDownDrawableHeight" format="dimension" />
            <attr name="dropDownDrawableSpacing" format="dimension" />
            <attr name="dropDownAnimStyle" format="reference" />
            <attr name="dropDownAnchor" format="integer" />
            <attr name="dropDownWidth" format="dimension" />
            <attr name="dropDownHeight" format="dimension" />
            <attr name="dropDownSelector" format="reference" />
        </declare-styleable>

    <declare-styleable name="NiceSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
        <attr name="arrowDrawable" format="reference|color"/>
        <attr name="dropDownListPaddingBottom" format="dimension"/>
        <attr name="backgroundSelector" format="integer"/>
        <attr name="textTint" format="color"/>
    </declare-styleable>


</resources>
