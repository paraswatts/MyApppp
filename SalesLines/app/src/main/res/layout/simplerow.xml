<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	>

	<RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_above="@+id/line"
		android:id="@+id/lin02"
        android:gravity="bottom"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
		>

		<TextView

			android:layout_marginRight="2dp"
			android:layout_alignParentLeft="true"
			android:id="@+id/colortext01"
			android:layout_width="5dp"
			android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
			android:layout_alignParentBottom="true"
			android:textSize="12sp"
			android:background="#ff6500"/>
		<TextView
            android:layout_gravity="bottom"
            android:gravity="bottom"
			android:layout_marginRight="2dp"
			android:layout_toRightOf="@+id/colortext01"
			android:id="@+id/colortext02"
			android:layout_width="5dp"
            android:layout_alignParentBottom="true"
			android:layout_height="wrap_content"
			android:textSize="12sp"
			android:background="#00339d"/>

		<TextView
            android:layout_gravity="bottom"
            android:gravity="bottom"
			android:layout_toRightOf="@+id/colortext02"
			android:layout_marginRight="2dp"
			android:id="@+id/colortext03"
			android:layout_width="5dp"
			android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"

			android:textSize="12sp"
			android:background="#9602c8"/>

		<TextView
            android:layout_gravity="bottom"
            android:gravity="bottom"
			android:layout_toRightOf="@+id/colortext03"
			android:id="@+id/colortext04"
			android:layout_width="5dp"
			android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
			android:textSize="12sp"
			android:background="#009a34"/>

		<TextView android:id="@+id/text01"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/colortext01"
			android:textColor="#000"
			android:textStyle="bold"
			android:textSize="6sp"/>

		<TextView android:id="@+id/text02"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/colortext02"
			android:layout_toRightOf="@+id/colortext01"
			android:textColor="#000"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
			android:textSize="6sp"/>

		<TextView android:id="@+id/text03"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/colortext02"
			android:layout_above="@+id/colortext03"
			android:textColor="#000"
			android:textStyle="bold"
			android:textSize="6sp"/>

		<TextView android:id="@+id/text04"
            android:layout_marginLeft="2dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/colortext04"
			android:layout_toRightOf="@+id/colortext03"
			android:textColor="#000"
			android:textStyle="bold"
			android:textSize="6sp"/>

	</RelativeLayout>
    <View
        android:paddingRight="8dp"
        android:id="@+id/line"
        android:layout_above="@+id/title"
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:background="@android:color/black"></View>

	<TextView
		android:id="@+id/title"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:textSize="14sp"
		android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
		android:textColor="#000"/>
</RelativeLayout>
