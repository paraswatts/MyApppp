<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/colorLine"></View>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"

        android:text="Lead Page"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"

        android:background="@color/colorLine"></View>

    <!--<android.support.v4.widget.SwipeRefreshLayout-->
    <!--android:id="@+id/swipeRefreshLayout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="Enquiry Number"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/et_EnqNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="1dp"
                        android:elevation="3dp"

                        android:focusable="false"
                        android:gravity="center|left"

                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="Name"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/tv_Name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/text_view_border"

                        android:elevation="3dp"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
android:hint="Enter name"
                        android:singleLine="true"
                        android:textSize="15dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="Phone"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/tv_Phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="3dp"

                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"
                        android:maxLength="10"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:hint="Enter phone"
                        android:textSize="15dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="Email"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/tv_Email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="3dp"

                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"

                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:hint="Enter email"
                        android:textSize="15dp" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="Expected Close Date"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_ExpectedCloseDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="3dp"

                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"

                        android:imeOptions="actionNext"

                        android:maxLength="10"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:singleLine="true"
                        android:textSize="15dp" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="Address"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/tv_Address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="3dp"

                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"

                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:hint="Enter address"
                        android:singleLine="true"
                        android:textSize="15dp" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="Alternative Mobile"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/tv_AltMobile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="3dp"

                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"

                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:hint="Enter alternative mob."
                        android:textSize="15dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="Job Title"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_jobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="3dp"
                        android:hint="Enter job title"
                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"

                        android:imeOptions="actionNext"

                        android:maxLength="10"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:singleLine="true"
                        android:textSize="15dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="Department"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_Department"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="3dp"
                        android:hint="Enter department"
                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"

                        android:imeOptions="actionNext"

                        android:maxLength="10"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:singleLine="true"
                        android:textSize="15dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="Secondary Email"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_SecondaryEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="3dp"

                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"
                        android:hint="Enter secondary email"
                        android:imeOptions="actionNext"

                        android:maxLength="10"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:singleLine="true"
                        android:textSize="15dp" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:text="Fax"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_Fax"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="3dp"

                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"
                        android:hint="Enter fax"
                        android:imeOptions="actionNext"

                        android:maxLength="10"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:singleLine="true"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="206dp"
                        android:gravity="center"

                        android:orientation="vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.50"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.50"
                                android:gravity="center"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/img_PC"
                                    android:layout_width="70dp"
                                    android:layout_height="50dp"

                                    android:background="@drawable/ic_identity_card_layout"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="Photo"

                                    />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.50"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_VC"
                                    android:layout_width="70dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_identity_card_layout" />

                                <TextView
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:text="VC1"

                                    />

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.50"

                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/img_VC2"
                                    android:layout_width="70dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_identity_card_layout" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="VC2" />

                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_Edit"
                            android:layout_width="150dp"
                            android:layout_height="35dp"

                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"

                            android:background="@drawable/button_background"

                            android:text="Edit"

                            android:textColor="@drawable/button_text_color"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingLeft="5dp"
                            android:text="City"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/tv_City"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext"
                            android:layout_marginBottom="3dp"

                            android:background="@drawable/text_view_border"
                            android:elevation="3dp"
                            android:hint="Enter city"
                            android:paddingBottom="@dimen/paddingBottom"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:paddingRight="@dimen/paddingRight"
                            android:paddingTop="@dimen/paddingTop"
                            android:textSize="15dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:paddingBottom="3dp"
                            android:paddingLeft="5dp"
                            android:text="State"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/tv_State"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext"
                            android:layout_marginBottom="3dp"

                            android:background="@drawable/text_view_border"
                            android:editable="false"

                            android:elevation="3dp"
                            android:focusable="false"
                            android:drawableEnd="@drawable/arrow_spinner"
                            android:drawableRight="@drawable/cursor_"
                            android:hint=" --select--"
                            android:paddingBottom="@dimen/paddingBottom"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:paddingRight="@dimen/paddingRight"
                            android:paddingTop="@dimen/paddingTop"
                            android:textSize="15dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:paddingBottom="3dp"
                            android:paddingLeft="5dp"
                            android:text="Mobile"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/tv_Mobile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext"
                            android:layout_marginBottom="3dp"

                            android:background="@drawable/text_view_border"
                            android:elevation="3dp"
                            android:hint="Enter mobile"
                            android:paddingBottom="@dimen/paddingBottom"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:paddingRight="@dimen/paddingRight"
                            android:paddingTop="@dimen/paddingTop"
                            android:textSize="15dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:paddingBottom="3dp"
                            android:paddingLeft="5dp"
                            android:text="Website"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/et_Website"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext"
                            android:layout_marginBottom="3dp"

                            android:background="@drawable/text_view_border"
                            android:elevation="3dp"

                            android:imeOptions="actionNext"
                            android:hint="Enter website"
                            android:maxLength="10"
                            android:paddingBottom="@dimen/paddingBottom"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:paddingRight="@dimen/paddingRight"
                            android:paddingTop="@dimen/paddingTop"
                            android:singleLine="true"
                            android:textSize="15dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:paddingBottom="3dp"
                            android:paddingLeft="5dp"

                            android:text="Skype"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/et_Skype"

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext"
                            android:layout_marginBottom="3dp"
                            android:hint="Enter skype"
                            android:background="@drawable/text_view_border"
                            android:elevation="3dp"

                            android:imeOptions="actionNext"

                            android:maxLength="10"
                            android:paddingBottom="@dimen/paddingBottom"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:paddingRight="@dimen/paddingRight"
                            android:paddingTop="@dimen/paddingTop"
                            android:singleLine="true"
                            android:textSize="15dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:paddingBottom="3dp"
                            android:paddingLeft="5dp"

                            android:text="DealName"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/et_DealName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext"
                            android:layout_marginBottom="3dp"

                            android:background="@drawable/text_view_border"
                            android:elevation="3dp"

                            android:imeOptions="actionNext"
                            android:hint="Enter deal name"
                            android:maxLength="10"
                            android:paddingBottom="@dimen/paddingBottom"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:paddingRight="@dimen/paddingRight"
                            android:paddingTop="@dimen/paddingTop"
                            android:singleLine="true"
                            android:textSize="15dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:paddingBottom="3dp"
                            android:paddingLeft="5dp"

                            android:text="DealValue"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/et_DealValue"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext"
                            android:layout_marginBottom="3dp"
                            android:hint="Enter deal value"
                            android:background="@drawable/text_view_border"
                            android:elevation="3dp"

                            android:imeOptions="actionNext"

                            android:maxLength="10"
                            android:paddingBottom="@dimen/paddingBottom"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:paddingRight="@dimen/paddingRight"
                            android:paddingTop="@dimen/paddingTop"
                            android:singleLine="true"
                            android:textSize="15dp" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:paddingBottom="3dp"
                            android:paddingLeft="5dp"

                            android:text="Company"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/tv_Company"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext"
                            android:layout_marginBottom="3dp"
                            android:hint="Enter company"
                            android:background="@drawable/text_view_border"
                            android:elevation="3dp"

                            android:paddingBottom="@dimen/paddingBottom"
                            android:paddingLeft="@dimen/paddingLeft"
                            android:paddingRight="@dimen/paddingRight"
                            android:paddingTop="@dimen/paddingTop"

                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"

                android:background="@color/silver"
                android:visibility="gone" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:paddingBottom="3dp"
                android:paddingLeft="5dp"

                android:text="Pin Code"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/tv_PinCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext"
                android:layout_marginBottom="3dp"

                android:background="@drawable/text_view_border"
                android:editable="false"
                android:elevation="3dp"
                android:hint="Enter pin code"
                android:inputType="number"
                android:paddingBottom="@dimen/paddingBottom"
                android:paddingLeft="@dimen/paddingLeft"
                android:paddingRight="@dimen/paddingRight"
                android:paddingTop="@dimen/paddingTop"
                android:textSize="15dp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:paddingBottom="3dp"
                android:paddingLeft="5dp"

                android:text="Assign Employee"
                android:textSize="15dp" />

            <EditText

                android:id="@+id/et_Assign_Employee"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext"
                android:layout_marginBottom="3dp"

                android:drawableEnd="@drawable/arrow_spinner"

                android:layout_weight="0.50"
                android:background="@drawable/text_view_border"
                android:drawableRight="@drawable/cursor_"

                android:elevation="3dp"
                android:focusable="false"
                android:hint="Assign Emp."

                android:inputType="number"
                android:paddingBottom="@dimen/paddingBottom"
                android:paddingLeft="@dimen/paddingLeft"
                android:paddingRight="@dimen/paddingRight"
                android:paddingTop="@dimen/paddingTop"
                android:textSize="15dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:paddingBottom="3dp"
                android:paddingLeft="5dp"

                android:text="Next Interaction"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_NextItreaction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext"
                android:layout_marginBottom="3dp"

                android:background="@drawable/text_view_border"
                android:clickable="false"
                android:drawableRight="@drawable/cursor_"
                android:editable="false"
                android:elevation="3dp"
                android:focusable="false"
                android:paddingBottom="@dimen/paddingBottom"
                android:paddingLeft="@dimen/paddingLeft"
                android:paddingRight="@dimen/paddingRight"
                android:paddingTop="@dimen/paddingTop"
                android:text="Next Interaction By"
                android:textSize="15dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:paddingBottom="3dp"
                android:paddingLeft="5dp"

                android:text="Next Interaction On"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_Next_Interaction_On"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext"
                android:layout_marginBottom="3dp"
                android:background="@drawable/text_view_border"
                android:editable="false"
                android:elevation="3dp"
                android:focusable="false"
                android:paddingBottom="@dimen/paddingBottom"
                android:paddingLeft="@dimen/paddingLeft"
                android:paddingRight="@dimen/paddingRight"
                android:paddingTop="@dimen/paddingTop"
                android:text="Next Interaction On"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Recordings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:text="Recordings"

                android:textSize="15dp"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView

                android:id="@+id/rc_RecyclerView_AudioList"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@color/blur"
                android:orientation="vertical">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btn_Update"
                        android:layout_width="230dp"
                        android:layout_height="30dp"
