<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorLine"></View>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text="Update Lead "
            android:textColor="@color/colorPrimary"
            android:textSize="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorLine"></View>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Add Enquiry Number "

                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/et_EnquiryNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext"
                    android:layout_margin="10dp"
                    android:editable="false"
                    android:elevation="5dp"
                    android:focusable="false"
                    android:gravity="center|left"
                    android:hint="Add Enquiry Number"

                    android:lines="4"
                    android:paddingBottom="@dimen/paddingBottom"
                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingRight="@dimen/paddingRight"
                    android:paddingTop="@dimen/paddingTop"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="Comments After Call "

                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/et_Comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/text_view_border"
                    android:elevation="5dp"
                    android:gravity="top|left"
                    android:hint="Comments after call"
                    android:lines="4"
                    android:paddingBottom="@dimen/paddingBottom"
                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingRight="@dimen/paddingRight"
                    android:paddingTop="@dimen/paddingTop" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Rating after call"
                    android:textSize="15sp" />


                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:stepSize="1.0"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Lead status after call"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/ll_LeadStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_H"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="#ff6400" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ff6400"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="4dp"
                            android:text="H"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">


                        <CheckBox
                            android:id="@+id/cb_W"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="#fed000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#fed000"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="4dp"
                            android:text="W"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_C"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:buttonTint="#02feff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#02feff"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"


                            android:paddingRight="8dp"
                            android:paddingTop="4dp"
                            android:text="C"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                    </LinearLayout>


                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Demo given on"
                    android:textSize="15sp" />


                <LinearLayout
                    android:id="@+id/rl_DemoDatePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_DemoDate"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.50"
                        android:background="@drawable/text_view_border"
                        android:drawableEnd="@drawable/newcalender"
                        android:drawableRight="@drawable/cursor_"
                        android:editable="false"
                        android:elevation="3dp"
                        android:focusable="false"
                        android:hint="DD/MM/YY"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:singleLine="true"

                        android:textSize="15dp" />
                    />
                </LinearLayout>

