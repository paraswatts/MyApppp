                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"

                    android:text="Next Interaction On"
                    android:textSize="15sp" />


                <LinearLayout
                    android:id="@+id/rl_OnDatePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_NextInteractionDate"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="0.50"
                        android:background="@drawable/text_view_border"
                        android:drawableEnd="@drawable/newcalender"
                        android:drawableRight="@drawable/cursor_"
                        android:editable="false"
                        android:elevation="3dp"
                        android:focusable="false"
                        android:hint="DD/MM/YY"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:singleLine="true"

                        android:textSize="15dp" />
                    />
                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Response of Interaction"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/sp_Response_Of_Iteraction"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"

                        android:layout_weight="1"
                        android:background="@drawable/text_view_border"
                        android:drawableEnd="@drawable/arrow_spinner"
                        android:drawableRight="@drawable/cursor_"
                        android:editable="false"
                        android:elevation="3dp"
                        android:focusable="false"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:singleLine="true"
                        android:text=" -- Select --"
                        android:textSize="15dp" />


                </LinearLayout>
                <Button

                    android:id="@+id/btn_SaleClouser"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
