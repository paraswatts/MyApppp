<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/white"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLine">

    </View>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:text="Update Profile"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="4dp"
                        android:text="Name"

                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_Name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"
                        android:hint="Enter Name"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"

                        android:layout_marginLeft="4dp"
                        android:text="Email"

                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_Email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"

                        android:background="@drawable/text_view_border"
                        android:editable="false"
                        android:elevation="3dp"
                        android:focusable="false"
                        android:hint="Enter Name"
                        android:paddingBottom="@dimen/paddingBottom"
                        android:paddingLeft="@dimen/paddingLeft"
                        android:paddingRight="@dimen/paddingRight"
                        android:paddingTop="@dimen/paddingTop"

                        android:singleLine="true"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"

                        android:layout_marginLeft="4dp"
                        android:text="Password"

                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_Password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"

                        android:background="@drawable/text_view_border"
                        android:editable="false"
                        android:elevation="3dp"
                        android:focusable="false"
                        android:hint="Enter Password"

                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:textSize="15dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="4dp"
                        android:text="Mobile"

                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_Mobile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"

                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"
                        android:hint="Enter Mobile"
                        android:padding="8dp"
                        android:textSize="15dp" />


                    <Spinner
                        android:id="@+id/spinner"
                        style="@style/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:elevation="3dp"
                        android:entries="@array/role"
                        android:spinnerMode="dropdown"
                        android:visibility="gone" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="4dp"
                        android:text="Role"

                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_Role"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"

                        android:background="@drawable/text_view_border"
                        android:editable="false"

                        android:elevation="3dp"
                        android:focusable="false"
                        android:hint="Enter Role"

                        android:padding="8dp"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="4dp"
                        android:text="LinkedIn"

                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_LinkedIn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"
                        android:hint="Enter LinkedIn"
                        android:padding="8dp"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"

                        android:layout_marginLeft="4dp"
                        android:text="Total Experience"

                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_TotalExp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"

                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"
                        android:hint="Enter Total Experience"
                        android:padding="8dp"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"

                        android:layout_marginLeft="4dp"
                        android:text="Date of Birth"

                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_DOB"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"

                        android:background="@drawable/text_view_border"
                        android:editable="false"
                        android:elevation="3dp"
                        android:focusable="false"
                        android:hint="Enter date of birth"

                        android:padding="8dp"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"

                        android:layout_marginLeft="4dp"
                        android:text="Qualification"

                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_Qualification"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"

                        android:background="@drawable/text_view_border"
                        android:elevation="3dp"
                        android:hint="Enter Qualification"
                        android:padding="8dp"
                        android:textSize="15dp" />


                    <Spinner
                        style="@style/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:elevation="3dp"
                        android:spinnerMode="dropdown"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"

                        android:layout_marginLeft="4dp"
                        android:text="Immediate Manager"

                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_ImmedateManager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext"
                        android:layout_marginBottom="4dp"

                        android:background="@drawable/text_view_border"
                        android:editable="false"

                        android:elevation="3dp"
                        android:focusable="false"
                        android:hint="Immediate Manager"
                        android:padding="8dp"
                        android:textSize="15dp"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorLine"></View>

            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_Save"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"

                android:background="@drawable/button_background"
                android:text="Save"
                android:textColor="@drawable/button_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorLine"></View>

            <LinearLayout

                android:id="@+id/ll_PreviousEmp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_PreviousProfile"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_Previous_Emp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/button_add" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Previous Employer"
                    android:textColor="#454649"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_PreviousEmp1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/et_PreviousCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/text_view_border"
                            android:elevation="3dp"
                            android:hint="Company Name"
                            android:padding="8dp"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/et_PreviousCompanyDoj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/text_view_border"

                            android:editable="false"
                            android:elevation="3dp"
                            android:focusable="false"

                            android:hint="Date of joining"
                            android:padding="8dp"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_PreviousCompanyDesignation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/text_view_border"
                            android:elevation="3dp"
                            android:hint="Designation"
                            android:padding="8dp"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/et_PreviousCompanyDol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/text_view_border"
                            android:editable="false"
                            android:elevation="3dp"
                            android:focusable="false"

                            android:hint="Date of leaving"
                            android:padding="8dp"
                            android:textSize="15dp" />

                    </LinearLayout>


                </LinearLayout>


                <Spinner
                    android:id="@+id/sp_PreviousCompanyWorkSector"
                    style="@style/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"

                    android:elevation="3dp"
                    android:entries="@array/user_previous_sector"
                    android:padding="8dp"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />


                <EditText
                    android:id="@+id/et_Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/text_view_border"
                    android:drawableRight="@drawable/cursor_"
                    android:editable="false"
                    android:elevation="3dp"
                    android:focusable="false"

                    android:padding="8dp"
                    android:textSize="15dp" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLine"></View>

</LinearLayout>
