<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLine"></View>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:text="Change Notiication Sound"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLine"></View>


    <Button
        android:id="@+id/tv_ChangeReminderSound"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_link_selector_bg"
        android:gravity="center|left"
        android:padding="8dp"
        android:text="Set Reminder Tone"
        android:textColor="@drawable/text_link_selector" />


    <RelativeLayout
        android:id="@+id/rl_switch"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_link_selector_bg">

        <Switch
            android:id="@+id/sw_dialpad"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:checked="true" />

        <Button
            android:id="@+id/tv_DialPad"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:clickable="false"
            android:focusable="false"
            android:layout_centerVertical="true"

            android:layout_toLeftOf="@+id/sw_dialpad"
            android:layout_toStartOf="@+id/sw_dialpad"
            android:background="@drawable/text_link_selector_bg"
            android:gravity="center|left"
            android:padding="8dp"
            android:text="Dial pad tone on/off"
            android:textColor="@drawable/text_link_selector" />

    </RelativeLayout>

