<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@android:color/white">



    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLine"></View>


    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inactive user"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLine"></View>



    <TextView

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4d5056"
        android:padding="8dp"
        android:text="Are you sure you want to inactive user?"/>

    <LinearLayout
        android:layout_marginTop="48dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:textSize="15sp"

        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:textColor="@drawable/button_text_color"
        android:background="@drawable/button_background"
        android:text="Yes"/>

    <Button
        android:layout_marginLeft="32dp"
        android:textSize="15sp"

        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:textColor="@drawable/button_text_color"
        android:background="@drawable/button_background"
        android:text="No"/>

    </LinearLayout>

</LinearLayout>
