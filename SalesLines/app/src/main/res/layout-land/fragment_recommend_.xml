<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@android:color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorLine"></View>


            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommend App"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp" />

            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorLine"></View>



            <EditText
                android:elevation="1dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/et_Password"
                android:layout_below="@+id/et_Email"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:hint="Name"

                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/edit_text_border1"/>

            <EditText

                android:elevation="1dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/et_Email"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/et_Email"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:hint="Email"

                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/edit_text_border1"
                />


            <EditText

                android:elevation="1dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/et_Phone"
                android:layout_below="@+id/et_Email"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:hint="Phone"

                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/edit_text_border1"
                />


            <EditText

                android:elevation="1dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/et_Company"
                android:layout_below="@+id/et_Email"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:hint="Company"

                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/edit_text_border1"
                />


            <Button
                android:id="@+id/button"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="32dp"

                android:text="Submit"
                android:textColor="@drawable/button_text_color"
                android:background="@drawable/button_background"
                android:textSize="15sp" />

            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorLine"></View>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share with"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/fb"
                    android:layout_marginRight="8dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/facebook_background"
                    />

                <Button
                    android:id="@+id/twitter"
                    android:layout_marginRight="8dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/twiiter_background"
                    />
                <Button
                    android:id="@+id/linkedin"
                    android:layout_marginRight="8dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/linkedin_background"
                    />

                <Button
                    android:id="@+id/whatsapp"
                    android:layout_marginRight="8dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/whatsapp_background"
                    />

                <Button
                    android:id="@+id/googleplus"
                    android:layout_marginRight="8dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/google_background"
                    />
                <Button
                    android:id="@+id/instagram"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/insta_background"
                    />

            </LinearLayout>


            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorLine"></View>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
